<link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
<div class = "container">
    <h1 class = "text-center display-1">Burgers!</h1>
    <div class ="row">
        <div class = "col">
            <h2>Ready to Eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    <div class = "col">
        <h2>Burgers that you have eaten!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block2 devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    </div>

    <div class = "row">
        <div class = "col text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="name">
            </div>
            <button class = "form-group" type="submit">Add burger</button>

            </form>
        </div>
    </div>
</div>
